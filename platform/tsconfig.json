{
	"compilerOptions": {
        "esModuleInterop": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./resources/js/*"]
		},
		"typeRoots": ["./node_modules/@types", "vite/client"],
	},
	"include": [
		"./resources/js/**/*.ts",
		"./resources/js/**/*.d.ts",
		"./resources/js/**/*.tsx",
		"./tailwind.config.js",
        "./vite.config.ts"
	],
	"exclude": [
		"./coverage/**/*.js",
		"./vendor",
		"./node_modules",
		"./resources/js/shadcn/**/*.tsx"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
